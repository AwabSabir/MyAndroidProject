<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSelectTypeWindow">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView
           android:id="@+id/welcomText"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Welcome select window"
           android:textSize="50sp"
           android:layout_centerHorizontal="true"
           android:textColor="@color/darkgreen"


           />

       <RadioGroup
           android:id="@+id/selectWindow"
           android:layout_width="328dp"
           android:layout_height="159dp"
           android:layout_below="@id/welcomText"
           android:layout_marginLeft="30sp"
           android:layout_marginTop="40sp">

           <RadioButton
               android:id="@+id/window10"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Window 10"
               android:textSize="30sp" />

           <RadioButton
               android:id="@+id/windwo8.1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:text="window 8.1"
               android:textSize="30sp" />

           <RadioButton
               android:id="@+id/windwo7"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:text="window 7"
               android:textSize="30sp"
               />

       </RadioGroup>

       <EditText
           android:id="@+id/comment"
           android:layout_width="wrap_content"
           android:layout_height="150dp"
           android:layout_below="@id/selectWindow"
           android:layout_alignParentLeft="true"
           android:layout_alignParentRight="true"
           android:hint="Enter the window or software name or comments"

           android:layout_marginLeft="4dp"
           android:layout_marginTop="-3dp"
           android:layout_marginRight="-4dp"
           android:layout_marginBottom="3dp"
           android:padding="10dp"
           />

       <Button
           android:id="@+id/submitWindow"
           android:layout_width="300dp"
           android:layout_height="40dp"
           android:layout_below="@+id/comment"
           android:text="submit"
           android:background="@drawable/loginbtn"
            android:layout_centerHorizontal="true"
           android:textColor="@color/lightblue"
           />
   </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>