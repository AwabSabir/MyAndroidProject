<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/windowintall"
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:background="@color/lightblue"
            android:src="@drawable/installationofwindows"

            />

        <LinearLayout
            android:id="@+id/userbillLayout"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_below="@id/windowintall"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="195dp"
            android:layout_marginRight="195dp"
            android:background="@color/darkparot"
            android:orientation="vertical">

            <ImageView
                android:layout_width="185dp"
                android:layout_height="150dp"
                android:src="@drawable/user_people" />

            <Button
                android:id="@+id/viewProfile"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/screenbtn"
                android:text="Deatil profile"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/contactUS"
            android:layout_width="190dp"
            android:layout_height="273dp"
            android:layout_below="@id/windowintall"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@color/lightblue"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="210dp"
                android:padding="10dp"
                android:src="@drawable/contact_us" />

            <Button
                android:id="@+id/contactUSbtn"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/screenbtn"
                android:text="Contact us"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/followus"
            android:layout_width="219dp"
            android:layout_height="74dp"
            android:layout_below="@+id/userbillLayout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="-3dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="195dp"
            android:layout_marginRight="195dp"
            android:background="@color/pinkcolr">

            <ImageView
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:src="@drawable/followus" />

            <Button
                android:id="@+id/followusbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/screenbtn"
                android:text="follow"
                android:textColor="@color/white"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="224dp"
            android:layout_height="224dp"
            android:layout_below="@+id/followus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="-3dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="187dp"
            android:layout_marginRight="187dp"
            android:layout_marginBottom="2dp"
            android:background="@color/darkgreen"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="214dp"
                android:layout_height="71dp"
                android:paddingTop="10dp"
                android:src="@drawable/installsoftware" />

            <Button
                android:id="@+id/instaSoftware"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/screenbtn"
                android:text="Install windows/software"
                android:textColor="@color/white"

                android:textStyle="bold"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="169dp"
            android:layout_height="243dp"
            android:layout_below="@id/contactUS"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="1dp"
            android:background="@color/pinkcolr"
            android:orientation="vertical"

            android:padding="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:padding="10dp"
                android:src="@drawable/activationkey" />

            <Button
                android:id="@+id/activatebtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:background="@drawable/screenbtn"
                android:padding="5dp"
                android:text="Acitivate your softwar"
                android:textColor="@color/white"
                android:textStyle="bold"


                />


        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>